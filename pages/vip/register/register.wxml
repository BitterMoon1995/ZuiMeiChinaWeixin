<view class="container">

    <view class="lineHeight" type="number">手机号码
        <input class='input' placeholder='请输入手机号' bind:input="phone" type="number" maxlength="{{11}}"></input>
    </view>
    <view class="lineHeight" type="text">真实姓名
        <input class='input-15' placeholder='您的真实姓名' bind:input="realName" type="text" maxlength="{{4}}"></input>
    </view>
    <view class="lineHeight" type="text">身份证号码
        <input class='input-7' placeholder='您的真实身份证号码' bind:input="idNum" type="idcard" maxlength="{{18}}"></input>
    </view>
    <view class="lineHeight">收货地址
        <input class='input-7' type='text' placeholder='收货地址' bind:input="address" maxlength="{{30}}"></input>
    </view>
</view>


<view class="weui-uploader">
    本人照片：
    <view class="img-v weui-uploader__bd">
        <view class='pic' wx:for="{{imgs}}" wx:for-item="item" wx:key="*this">
            <image class='weui-uploader__img '
                   src="{{item}}"
                   data-index="{{index}}" mode="aspectFill" bindtap="previewImg">
                <icon type='cancel' class="delete-btn" data-index="{{index}}" catchtap="deleteImg"></icon>
            </image>
        </view>

        <!-- 用来提示用户上传图片 -->
        <view class="weui-uploader__input-box pic" bindtap="chooseImg"> </view>
    </view>
    <button class="upload-img-btn" bindtap="chooseImg" type='primary' wx:if="{{!hide}}">拍照  / 相册</button>
</view>

<button bind:tap="upload">确认并上传</button>
